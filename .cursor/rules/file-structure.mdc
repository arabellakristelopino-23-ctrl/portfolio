│   │   └── Footer.tsx             # footer section
│   │
│   ├── sections/
│   │   ├── Hero.tsx               # "Ara's Portfolio" hero section
│   │   ├── AboutSection.tsx       # About me story + photo
│   │   ├── SkillsSection.tsx      # grouped skills & levels
│   │   ├── ProjectsSection.tsx    # grid of project cards
│   │   └── ContactSection.tsx     # email + social links
│   │
│   └── ui/
│       ├── Button.tsx             # primary/secondary button variants
│       ├── SectionTitle.tsx       # reusable section heading component
│       ├── Card.tsx               # generic card for skills/projects
│       ├── Badge.tsx              # tech/skill pill component
│       └── SocialLink.tsx         # icon + label link (GitHub, LinkedIn, etc.)
│
├── lib/
│   ├── projects.ts                # array of project data (title, desc, links)
│   ├── skills.ts                  # grouped skills (frontend, backend, tools)
│   └── siteConfig.ts              # site-wide constants (name, tagline, socials)
│
└── styles/
